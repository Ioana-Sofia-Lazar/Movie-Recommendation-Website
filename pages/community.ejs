<!DOCTYPE html>
<html>

<head>
    <title>Home</title>

    <% include ../partials/head %>
        <link rel="stylesheet" type="text/css" href="../css/community.css">
</head>

<body>

    <% include ../partials/navbar %>
        <div class="mainContainer">
            <h4 class="pageTitle">
                <span class="fa fa-users titleIcon"></span>Community - see most active users</h4>
            <div class="usersContainer">
                    <% for(var i = 0; i < userProfiles.length; i++) {
                            let user = userProfiles[i]; %>
                            <a href="/profile?user=<%= user.user_id %>">
                <div class="content userContainer">
                    <div class="userPhoto" style="background-image: url(<%= user.photo ? '../images/upload_images/' + user.photo : '../images/profile-placeholder.png' %>)">
                    </div>      
                    <div class="userInfo">
                    <h4 class="userName"><%= user.fname + " " + user.lname %></h4>
                    <p>Watchlist <span class="blueText"><%= user.watchlist_number %></span> | Seen <span class="blueText"><%= user.seen_number %></span></p>
                </div>
                </div>
            </a>
                <% } %>
            
            </div>

        </div>

</body>

</html>